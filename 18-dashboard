    <!-- Visualization & Content Choices:
         1. OVERVIEW: Uses a Line Chart to show the timeline of brand maturity. Cards show the 4 pillars.
            - Goal: Establish the breadth of the brand.
         2. SPORTSWEAR: Uses a Doughnut Chart (simulated) to show category mix (Shoes vs Apparel).
            - Goal: Show the dominance of the Puma collaboration.
         3. COMMUNE: Uses a Bar Chart to visualize the geographic footprint (Number of outlets per city).
            - Goal: Highlight the physical expansion of the restaurant chain.
         4. FRAGRANCE: Uses an interactive grid of scent profiles.
            - Goal: Demonstrate product variety without complex charts.
         Confirmation: NO SVG graphics used (Chart.js Canvas used). NO Mermaid JS used.
    -->

    <script>
        // --- Data Store ---
        const brandData = {
            overview: {
                title: "Ecosystem Overview",
                desc: "One8 is an unfunded company based in India, founded in 2017 by Virat Kohli. It operates as a premium lifestyle brand bridging the gap between sports and lifestyle.",
                cards: [
                    { title: "Sportswear", val: "Global Partnership", sub: "w/ PUMA", icon: "‚ö°", color: "text-teal-400" },
                    { title: "Hospitality", val: "8+ Cities", sub: "One8 Commune", icon: "üçΩÔ∏è", color: "text-amber-400" },
                    { title: "Fragrance", val: "6+ Variants", sub: "EDP & Body Spray", icon: "üíß", color: "text-blue-400" },
                    { title: "Innerwear", val: "Premium Range", sub: "w/ Lux Industries", icon: "üëï", color: "text-indigo-400" }
                ],
                chartType: 'line',
                chartData: {
                    labels: ['2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025'],
                    datasets: [{
                        label: 'Brand Touchpoints & Locations',
                        data: [1, 5, 12, 18, 25, 35, 42, 50, 58],
                        borderColor: '#fbbf24',
                        backgroundColor: 'rgba(251, 191, 36, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                chartTitle: "Brand Expansion Timeline (Cumulative Touchpoints)"
            },
            sportswear: {
                title: "Sportswear & Athleisure",
                desc: "The One8 x Puma collaboration is a cornerstone of the brand, contributing significantly to Puma India's revenue (approx. 10% in FY19). Focuses on sneakers, activewear, and accessories.",
                cards: [
                    { title: "Key Partner", val: "PUMA", sub: "German Sportswear Giant", icon: "ü§ù", color: "text-red-400" },
                    { title: "Top Category", val: "Footwear", sub: "Sneakers & Trainers", icon: "üëü", color: "text-orange-400" },
                    { title: "Target", val: "Gen Z / Millennials", sub: "Active Lifestyle", icon: "üéØ", color: "text-green-400" },
                    { title: "Style", val: "Minimalist", sub: "Gold/Black/White", icon: "‚ú®", color: "text-gray-200" }
                ],
                chartType: 'doughnut',
                chartData: {
                    labels: ['Footwear', 'Apparel', 'Accessories', 'Kids'],
                    datasets: [{
                        data: [45, 35, 15, 5],
                        backgroundColor: ['#fbbf24', '#14b8a6', '#6366f1', '#f472b6'],
                        borderWidth: 0
                    }]
                },
                chartTitle: "Estimated Product Category Mix"
            },
            hospitality: {
                title: "One8 Commune (Dining)",
                desc: "A chain of casual dining restobars that emphasize 'Commune Sensibility' - bringing people together. Locations feature distinct decor suited to their cities.",
                cards: [
                    { title: "Top Location", val: "Juhu, Mumbai", sub: "Bungalow Heritage", icon: "üèñÔ∏è", color: "text-yellow-200" },
                    { title: "Cuisine", val: "Global", sub: "Virat's Favorites", icon: "ü•ò", color: "text-orange-300" },
                    { title: "Vibe", val: "Premium Casual", sub: "Music & Dining", icon: "üéµ", color: "text-purple-400" },
                    { title: "Rating", val: "4.5/5", sub: "Avg. User Review", icon: "‚≠ê", color: "text-yellow-500" }
                ],
                chartType: 'bar',
                chartData: {
                    labels: ['Delhi NCR', 'Mumbai', 'Bangalore', 'Pune', 'Kolkata', 'Jaipur'],
                    datasets: [{
                        label: 'Outlets',
                        data: [3, 2, 1, 1, 1, 1],
                        backgroundColor: '#fbbf24',
                        borderRadius: 4
                    }]
                },
                chartTitle: "Geographic Footprint (Number of Outlets)"
            },
            fragrance: {
                title: "Fragrances & Grooming",
                desc: "A collection of Eau De Parfums and deodorants designed for the modern active man. Variants include Aqua, Willow, Intense, and Noir.",
                cards: [
                    { title: "Best Seller", val: "One8 INTENSE", sub: "Eau De Parfum", icon: "üî•", color: "text-red-500" },
                    { title: "Entry Price", val: "‚Çπ200+", sub: "Body Sprays", icon: "üè∑Ô∏è", color: "text-green-400" },
                    { title: "Variants", val: "6 Core Scents", sub: "Aqua, Pure, Fresh...", icon: "üß™", color: "text-blue-300" },
                    { title: "Type", val: "No Gas", sub: "Deodorant Tech", icon: "üí®", color: "text-gray-400" }
                ],
                chartType: 'bar', // Using horizontal bar for scent profile
                chartData: {
                    labels: ['Citrus (Fresh)', 'Woody (Intense)', 'Aquatic (Aqua)', 'Musk (Noir)', 'Spicy (Gold)'],
                    datasets: [{
                        label: 'Scent Intensity (1-10)',
                        data: [6, 9, 5, 8, 7],
                        backgroundColor: ['#a3e635', '#78350f', '#0ea5e9', '#171717', '#d97706'],
                        indexAxis: 'y'
                    }]
                },
                chartTitle: "Fragrance Profile Intensity Guide"
            }
        };

        // --- State ---
        let currentChart = null;

        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            updateView('overview');
        });

        // --- Core Logic ---
        function updateView(sectionId) {
            // 1. Update Nav State
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active', 'bg-amber-400', 'text-black'));
            const activeBtn = document.getElementById(`nav-${sectionId}`);
            if (activeBtn) {
                activeBtn.classList.add('active');
                // Remove hover classes that conflict with active state
                activeBtn.classList.remove('text-neutral-300', 'hover:bg-neutral-800'); 
            }

            // 2. Update Text Content
            const data = brandData[sectionId];
            document.getElementById('page-title').innerText = data.title;
            document.getElementById('page-desc').innerText = data.desc;
            document.getElementById('chart-title').innerText = data.chartTitle;
            document.getElementById('chart-caption').innerText = `Fig 1.0: Data visualization for ${data.title}`;

            // 3. Render Cards
            const contentArea = document.getElementById('content-area');
            contentArea.innerHTML = ''; // Clear existing
            
            data.cards.forEach(card => {
                const cardHtml = `
                    <div class="interactive-card bg-neutral-900 p-5 rounded-xl border border-neutral-800 cursor-pointer group">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-xs text-neutral-500 uppercase tracking-wider font-semibold">${card.title}</p>
                                <h4 class="text-2xl font-bold text-white mt-1 group-hover:text-amber-400 transition-colors">${card.val}</h4>
                                <p class="text-sm text-neutral-400 mt-1">${card.sub}</p>
                            </div>
                            <div class="text-2xl ${card.color} opacity-80 bg-neutral-800 p-2 rounded-lg group-hover:scale-110 transition-transform">
                                ${card.icon}
                            </div>
                        </div>
                    </div>
                `;
                contentArea.innerHTML += cardHtml;
            });

            // 4. Render Chart
            renderChart(data.chartType, data.chartData);
        }

        function renderChart(type, data) {
            const ctx = document.getElementById('mainChart').getContext('2d');
            
            // Destroy previous chart if exists
            if (currentChart) {
                currentChart.destroy();
            }

            // Common Options
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false, // Critical for container constraint
                plugins: {
                    legend: {
                        display: type !== 'bar', // Hide legend for simple bars
                        labels: { color: '#a3a3a3', font: { family: 'sans-serif' } }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(23, 23, 23, 0.9)',
                        titleColor: '#fbbf24',
                        bodyColor: '#fff',
                        borderColor: '#404040',
                        borderWidth: 1,
                        padding: 10
                    }
                },
                scales: {
                    y: {
                        display: type !== 'doughnut',
                        grid: { color: '#262626' },
                        ticks: { color: '#737373' }
                    },
                    x: {
                        display: type !== 'doughnut',
                        grid: { display: false },
                        ticks: { color: '#737373' }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            };

            // Create Chart
            currentChart = new Chart(ctx, {
                type: type,
                data: data,
                options: commonOptions
            });
        }

        function resetView() {
            updateView('overview');
        }
    </script>
    <!-- CONFIRMATION: NO SVG graphics used. NO Mermaid JS used. -->
</body>
